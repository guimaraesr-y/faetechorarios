{% extends 'layouts/app.twig' %}

{% block content %}
<div class='container'>
    <form method='POST' class='p-5'>
        {% if _GET['id'] is defined %}
            <h2 class="mb-4">Editar Sala</h2>
            <div class='input-group mb-2'>
                <span class="input-group-text" id="basic-addon1">C√≥digo</span>
                <input class="form-control" type="text" name="id" placeholder="ID da sala" value="{{ _GET['id'] }}" readonly>
            </div>
            <input class="form-control mb-2" type="text" name="nome" placeholder="Nome da sala" value="{{ _GET['nome'] }}" autofocus>
        {% else %}
            <h2 class="mb-4">Adicionar Sala</h2>
            <input class="form-control mb-2" type="text" name="nome" placeholder="Nome da sala" autofocus>
        {% endif %}

        <button type="submit" class="btn btn-primary">Salvar</button>
        {{ _GET['id'] ? "Ou <a href='/salas'>adicionar sala</a>" }}
    </form>

    <table class='table table-hover'>
        <thead>
            <tr>
                <th scope='col'>C√≥digo</th>
                <th scope='col'>Nome</th>
                <th scope='col'>Editar</th>
                <th scope='col'>Excluir</th>
            </tr>
        </thead>
        <tbody>
            {% for sala in salas %}
                <tr>
                    <th scope="col">{{ sala.id }}</th>
                    <td>{{ sala.nome }}</td>
                    <td>{{ sala.tempos_semanais }}</td>
                    <td>
                        <a class="link-underline link-underline-opacity-0" href="/salas?id={{ sala.id }}&nome={{ sala.nome }}">
                        üìù
                        </a>
                    </td>
                    <td>
                        <form action="/salas/delete" method="post">
                            <input type="hidden" name="id" value="{{ sala.id }}">
                            <input class="bg-transparent border-0" type="submit" value="üóëÔ∏è">
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}